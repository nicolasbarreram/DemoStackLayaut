<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DemoStackLayaut.Expancion">
    <ContentPage.Content>
        <StackLayout>
            <BoxView BackgroundColor="BlueViolet"
                     HeightRequest="1"></BoxView>
            <Label Text="Start"
                   VerticalOptions="StartAndExpand"
                   BackgroundColor="Red">
                   
            </Label>
            
            <BoxView BackgroundColor="Blue"
                     HeightRequest="1"></BoxView>
            <Label Text="Start"
                   VerticalOptions="CenterAndExpand"
                   BackgroundColor="Red">

            </Label>
            
            <BoxView BackgroundColor="BlueViolet"
                     HeightRequest="1"></BoxView>
            <Label Text="Start"
                   VerticalOptions="Start"
                   BackgroundColor="Red">

            </Label>
            
            <BoxView BackgroundColor="BlueViolet"
                     HeightRequest="1"></BoxView>
            <Label Text="Start"
                   VerticalOptions="Start"
                   BackgroundColor="Red">

            </Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>